<UserControl x:Class="Filmoteka.View.PrihlaseniView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Filmoteka.View"
             xmlns:uc="clr-namespace:Filmoteka.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="800">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" Grid.Row="1">
            <TextBlock Text="Přihlášení uživatele" FontSize="15"/>
            <Label Content="Uživatelské jméno"/>
            <TextBox Text="{Binding LoginName, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
            <Label Content="Heslo"/>
            <uc:PasswordUserControl PasswordDP="{Binding LoginPassword,
                        UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            <Button  Content="Přihlásit se" Margin="0,20,0,0" Width="80"
                    Command="{Binding UserLogin}" IsDefault="True"/>
            <TextBlock Text="{Binding Message}"/>
            <Button  Content="Odhlásit se" Margin="0,20,0,0" Width="80"
                    Command="{Binding UserLogout}"/>
        </StackPanel>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <StackPanel HorizontalAlignment="Center" Grid.Row="1">
            <TextBlock Text="Registrace nového uživatele" FontSize="15"/>
            <Label Content="Nové uživatelské jméno"/>
            <TextBox Text="{Binding RegistrationName, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
            <Label Content="Nové Heslo"/>
            <uc:PasswordUserControl PasswordDP="{Binding RegistrationPassword, 
                                UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            <Label Content="Znova heslo pro kontrolu"/>
            <uc:PasswordUserControl PasswordDP="{Binding RegistrationPasswordVerification, 
                                UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            <Button Command="{Binding UserRegistration}" Content="Registrovat" Margin="0,20,0,0" 
                    Width="80" IsDefault="True"/>
            <TextBlock Text="{Binding RegistrationMessage}"/>
        </StackPanel>
        </Grid>
    </Grid>
</UserControl>
