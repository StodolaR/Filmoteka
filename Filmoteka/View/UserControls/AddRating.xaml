<UserControl x:Class="Filmoteka.View.AddRating"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Filmoteka.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Width="300" >
            <TextBlock Text="Přidat hodnocení"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="Hodnocení: "/>
                <local:RatingBox RatingValue="{Binding NewMovieRating, Mode=TwoWay}"/>
            </StackPanel>
            <Label Content="Recenze:"/>
            <TextBox Text="{Binding NewMovieReview, UpdateSourceTrigger=PropertyChanged}" 
             TextWrapping="Wrap" AcceptsReturn="True" MinHeight="180"/>
            <Button Content="Přidej hodnocení" Width="100" Margin="20" Command="{Binding AddNewRating}"/>
        </StackPanel>
    </Grid>
</UserControl>
