<UserControl x:Class="Filmoteka.View.AddMovie"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Filmoteka.View"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="200">
    <Grid>
        <StackPanel Width="200">
            <Label Content="Přidat nový film"/>
            <Label Content="Jméno:"/>
            <TextBox/>
            <Label Content="Žánr:"/>
            <ComboBox/>
            <Label Content="Obsah"/>
            <TextBox/>
            <Label Content="Rok"/>
            <Calendar DisplayMode="Decade"/>
            <Button Content="Přidat obrázek" Width="100"/>
            <Button Content="Uložit film" Width="100"/>
        </StackPanel>
        
    </Grid>
</UserControl>
