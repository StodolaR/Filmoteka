<UserControl x:Class="Filmoteka.View.DetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Filmoteka.View"
             xmlns:framework="clr-namespace:Filmoteka.Framework" 
             xmlns:viewmodel="clr-namespace:Filmoteka.ViewModel" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <framework:FullPathConverter x:Key="fullPathConverter"/>
        <BooleanToVisibilityConverter x:Key="boolToVisibilityConverter"/>
    </UserControl.Resources>
    <StackPanel>
        <DockPanel LastChildFill="False">
            <Image  Source="{Binding SelectedMovie.PicturePath, Converter={StaticResource fullPathConverter}}" 
                    DockPanel.Dock="Left" Height="200"/>
            <StackPanel DockPanel.Dock="Left">
                <TextBlock Text="{Binding SelectedMovie.Name}" FontSize="30"/>
                <TextBlock Text="{Binding SelectedMovie.Genre}"/>
                <TextBlock Text="{Binding SelectedMovie.Year}"/>
            </StackPanel>
            <StackPanel DockPanel.Dock="Right" Width="200" >
                <TextBlock Text="{Binding SelectedMovieAvgRating, StringFormat={}{0}%}" FontSize="60" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding SelectedMovieRatings.Count, StringFormat=Počet hodnocení: {0}}" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </DockPanel>
        <DockPanel LastChildFill="False">
            <StackPanel Width="500" DockPanel.Dock="Left">
                <TextBlock Text="{Binding SelectedMovie.Description}"  TextWrapping="Wrap" />
                <TextBlock Text="Recenze" Margin="0,20,0,10" />
                <ListView ItemsSource="{Binding SelectedMovieRatings}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,5">
                                <TextBlock Text="{Binding Rating}"/>
                                <TextBlock Text="{Binding Review}" TextWrapping="Wrap" Width="450"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
            <local:AddRating DockPanel.Dock="Right" Visibility="{Binding IsUserLogged, Converter={StaticResource boolToVisibilityConverter}}"/>
        </DockPanel>
    </StackPanel>
    
</UserControl>
