<UserControl x:Class="Filmoteka.View.DetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Filmoteka.View"
             xmlns:framework="clr-namespace:Filmoteka.Framework"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <framework:FullPathConverter x:Key="fullPathConverter"/>
    </UserControl.Resources>
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Image Height="200" Source="{Binding SelectedMovie.PicturePath, Converter={StaticResource fullPathConverter}}"/>
            <StackPanel>
                <TextBlock Text="{Binding SelectedMovie.Name}"/>
                <TextBlock Text="{Binding SelectedMovie.Genre}"/>
                <TextBlock Text="{Binding SelectedMovie.Year}"/>
                <TextBlock Text="{Binding SelectedMovie.AvgRating}"/>
                <TextBlock Text="{Binding SelectedMovie.UserMovies.Count}"/>
            </StackPanel>
        </StackPanel>
        <TextBlock Text="{Binding SelectedMovie.Description}"/>
    </StackPanel>
    
</UserControl>
