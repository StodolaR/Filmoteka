<Window x:Class="Filmoteka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Filmoteka"
        xmlns:framework="clr-namespace:Filmoteka.Framework"
        xmlns:view="clr-namespace:Filmoteka.View"
        xmlns:viewModel="clr-namespace:Filmoteka.ViewModel"
        mc:Ignorable="d"
        Title="Filmotéka" Height="700" Width="900">
    <Grid>
        <Grid.Resources>
            <framework:DetailViewConverter x:Key="detailViewConverter"/>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TabControl x:Name="MainTabControl" SelectedIndex="{Binding SelectedMovie, Converter={StaticResource detailViewConverter}}">
            <TabItem Header="Úvod">
                <view:UvodView/>
            </TabItem>
            <TabItem Header="Žebříček" >
                <view:ZebricekView/>
            </TabItem>
            <TabItem Header="Dle žánru" >
                <view:ZanryView/>
            </TabItem>
            <TabItem Header="Uživatelé" DataContext="{StaticResource uzivatelViewModel}">
                <view:UzivatelView/>
            </TabItem>
            <TabItem Header="Přihlášení" DataContext="{StaticResource uzivatelViewModel}">
                <view:PrihlaseniView/>
            </TabItem>
            <TabItem Visibility="Collapsed" Header="Detail filmu" >
                <view:DetailView/>
            </TabItem>
        </TabControl>
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" VerticalAlignment="Top">
            <TextBox x:Name="Search" Text="Vyhledávání" Width="200" VerticalAlignment="Center"/>
            <Button Height="20" Name="btnSearch" >
                <Button.Content>
                    <Image Source="Resources/search.png"/>
                </Button.Content>
            </Button>
            <Label Content="Přihlášen uživatel: "/>
            <Label Content="{Binding LoggedUser.Name}" DataContext="{StaticResource uzivatelViewModel}"/>
        </StackPanel>
    </Grid>
</Window>
