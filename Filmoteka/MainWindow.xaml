<Window x:Class="Filmoteka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Filmoteka"
        xmlns:uc="clr-namespace:Filmoteka.View.UserControls"
        xmlns:framework="clr-namespace:Filmoteka.Framework"
        xmlns:view="clr-namespace:Filmoteka.View"
        xmlns:viewModel="clr-namespace:Filmoteka.ViewModel"
        mc:Ignorable="d"
        Title="Filmotéka" Height="760" Width="1010" WindowStartupLocation="CenterScreen"
        DataContext="{StaticResource movieCollectionViewModel}">
    <Grid>
        <Grid.Resources>
            <framework:DetailViewConverter x:Key="detailViewConverter"/>
        </Grid.Resources>
        <TabControl x:Name="MainTabControl" SelectedIndex="{Binding SelectedMovie, Converter={StaticResource detailViewConverter}}">
            <TabItem Header="Úvod" Visibility="Collapsed">
                <view:UvodView/>
            </TabItem>
            <TabItem Header="Žebříček" Style="{StaticResource TabItemTemplate1}" FontSize="14">
                <view:ZebricekView/>
            </TabItem>
            <TabItem Header="Dle žánru" Style="{StaticResource TabItemTemplate1}" FontSize="14" >
                <view:ZanryView/>
            </TabItem>
            <TabItem Header="Uživatelé" DataContext="{StaticResource userCollectionViewModel}" Style="{StaticResource TabItemTemplate1}" FontSize="14">
                <view:UzivatelView/>
            </TabItem>
            <TabItem Header="Přihlášení" DataContext="{StaticResource userCollectionViewModel}" Style="{StaticResource TabItemTemplate1}" FontSize="14">
                <view:PrihlaseniView/>
            </TabItem>
            <TabItem Visibility="Collapsed" Header="Detail filmu" FontSize="14">
                <view:DetailView/>
            </TabItem>
        </TabControl>
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" VerticalAlignment="Top">
            <uc:SearchControl/>
            <Label Content="Přihlášen uživatel:"/>
            <Label Content="{Binding LoggedUser.Name}" DataContext="{StaticResource userCollectionViewModel}" MinWidth="200" FontSize="13" FontWeight="DemiBold" Margin="-4,-2,0,0"/>
        </StackPanel>
    </Grid>
</Window>
