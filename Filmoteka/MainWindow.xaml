<Window x:Class="Filmoteka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Filmoteka"
        xmlns:view="clr-namespace:Filmoteka.View"
        xmlns:viewModel="clr-namespace:Filmoteka.ViewModel"
        mc:Ignorable="d"
        Title="Filmotéka" Height="650" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TabControl >
            <TabItem Header="Úvod">
                <view:UvodView/>
            </TabItem>
            <TabItem Header="Žebříček" DataContext="{StaticResource zebricekViewModel}">
                <view:ZebricekView/>
            </TabItem>
            <TabItem Header="Dle žánru" DataContext="{StaticResource zanryViewModel}">
                <view:ZanryView/>
            </TabItem>
            <TabItem Header="Uživatelé" DataContext="{StaticResource uzivatelViewModel}">
                <view:UzivatelView/>
            </TabItem>
            <TabItem Header="Přihlášení" DataContext="{StaticResource prihlaseniViewModel}">
                <view:PrihlaseniView/>
            </TabItem>
        </TabControl>
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" VerticalAlignment="Top">
            <TextBox x:Name="Search" Text="Vyhledávání" Width="200" VerticalAlignment="Center"/>
            <Button Height="20">
                <Button.Content>
                    <Image Source="Resources/search.png"/>
                </Button.Content>
            </Button>
            <Label Content="Přihlášen uživatel: "/>
            <Label Content="{Binding LoggedUser}"/>
        </StackPanel>
    </Grid>
</Window>
